<Window x:Class="TeXConverter.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        Title="Formula draw and evaluation in WPF applications" 
		Height="694" Width="985" MinHeight="300" MinWidth="600" 
		FontWeight="Bold"
		Loaded="Window_Loaded">
    <Grid>
        <Border Margin="10,100,10,10" BorderBrush="LightGray" BorderThickness="1" >
            <ScrollViewer Padding="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <controls:FormulaControl x:Name="formulaControl" Scale="40"
                                         SelectionBrush="LightBlue" SnapsToDevicePixels="True" Height="363" />
            </ScrollViewer>
        </Border>
        <TextBox Name="inputTextBox" FontSize="30" Height="86" Margin="10,14,10,0" Padding="10,15,10,10" TextWrapping="Wrap" Text="A*x^2/(m-1)!+B*e^sin(y+1)/n!+C*log{n+m}(z^2)" VerticalAlignment="Top" TextChanged="OnTextChange" />
        <Button Name="ButtonEvaluate" Content="Evaluate and draw" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Width="130" Height="60" Click="ButtonEvaluate_Click"/>
    </Grid>
</Window>
